{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Yamlfmt",
  "definitions": {
    "Yamlfmt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "formatter": {
          "$ref": "#/definitions/Formatter"
        }
      },
      "required": [
        "formatter"
      ],
      "title": "Yamlfmt"
    },
    "Formatter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "indent": {
          "type": "integer"
        },
        "line_ending": {
          "enum": [
            "lf",
            "crlf"
          ]
        },
        "retain_line_breaks": {
          "type": "boolean"
        },
        "retain_line_breaks_single": {
          "type": "boolean"
        },
        "scan_folded_as_literal": {
          "type": "boolean"
        },
        "include_document_start": {
          "type": "boolean"
        },
        "indentless_arrays": {
          "type": "boolean"
        },
        "disallow_anchors": {
          "type": "boolean"
        },
        "max_line_length": {
          "type": "integer"
        },
        "drop_merge_tag": {
          "type": "boolean"
        },
        "pad_line_comments": {
          "type": "integer"
        }
      },
      "required": [],
      "title": "Formatter"
    }
  }
}
